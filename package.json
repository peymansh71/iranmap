{
  "name": "iran-map",
  "version": "1.0.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^5.17.1",
    "@mui/material": "^5.17.1",
    "d3": "^7.8.5",
    "d3-geo": "^3.1.1",
    "d3-scale-chromatic": "^3.1.0",
    "echarts": "^5.6.0",
    "echarts-for-react": "^3.0.2",
    "electron-is-dev": "^3.0.1",
    "file-saver": "^2.0.5",
    "leaflet": "^1.9.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-leaflet": "^4.2.1",
    "react-router-dom": "^7.6.0",
    "react-scripts": "5.0.1",
    "react-simple-maps": "^3.0.0",
    "react-tooltip": "^5.28.1",
    "stylis-plugin-rtl": "^2.1.1",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:optimized": "GENERATE_SOURCEMAP=false npm run build",
    "analyze": "npx webpack-bundle-analyzer build/static/js/*.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "build-electron": "npm run build:optimized && electron .",
    "dist": "npm run build:optimized && electron-builder",
    "dist:win": "npm run build:optimized && npx electron-builder --win",
    "pack": "electron-builder --dir",
    "prepack": "npm run build:optimized",
    "predist": "npm run build:optimized"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/geojson": "^7946.0.16",
    "compression-webpack-plugin": "^11.1.0",
    "concurrently": "^9.1.2",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.3",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "build": {
    "appId": "com.iranmap.desktop",
    "productName": "Iran Map",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "node_modules/**/*"
    ],
    "compression": "maximum",
    "extraResources": [],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "compression": "maximum",
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    }
  }
}
